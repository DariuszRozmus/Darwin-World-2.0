<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.canvas.GraphicsContext?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.LineChart?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            minHeight="650.0" minWidth="850.0"
            fx:controller="darwin.presenter.SimulationPresenter">
    <center>
        <Canvas fx:id="mapGrid" />
    </center>

    <bottom>
        <VBox>

            <LineChart fx:id="populationChart"
                       prefWidth="400">
                <xAxis>
                    <NumberAxis label="xAxis"/>
                </xAxis>
                <yAxis>
                    <NumberAxis label="yAxis"/>
                </yAxis>
            </LineChart>
            <HBox>
                <Button fx:id="stopButton" text="Stop" />
                <Button fx:id="startButton" text="Run" />
            </HBox>
        </VBox>
    </bottom>
</BorderPane>